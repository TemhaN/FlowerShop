
@model FlowerShop.Models.LoginDto

<div class="container mx-auto px-4 py-16 sm:py-12 max-w-7xl">
    <div class="bg-white/95 p-8 sm:p-10 rounded-2xl bg-gradient-to-b from-white to-gray-50 max-w-[340px] min-h-[450px] sm:max-w-sm mx-auto">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-6 sm:mb-8 text-center">Вход</h1>
        <form asp-action="Login" method="post" class="grid gap-6">
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
            <div>
                <label asp-for="Username" class="block text-base font-medium text-gray-700 mb-1">Имя пользователя</label>
                <input asp-for="Username"
                       class="w-full border border-gray-300 rounded-lg px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition duration-200"
                       placeholder="Введите имя пользователя" />
                <span asp-validation-for="Username" class="text-red-600 text-sm mt-1 block text-center"></span>
            </div>
            <div>
                <label asp-for="Password" class="block text-base font-medium text-gray-700 mb-1">Пароль</label>
                <input asp-for="Password" type="password"
                       class="w-full border border-gray-300 rounded-lg px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition duration-200"
                       placeholder="Введите пароль" />
                <span asp-validation-for="Password" class="text-red-600 text-sm mt-1 block text-center"></span>
            </div>
            <div class="flex justify-end">
                <button type="submit"
                        class="bg-gradient-to-r from-green-600 to-green-700 text-white px-8 py-3 rounded-lg font-semibold hover:from-green-700 hover:to-green-800 hover:scale-102 transition duration-200 text-base">
                    Войти
                </button>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="text-red-600 text-sm text-center">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
            <p class="text-sm text-gray-600 text-center">
                Нет аккаунта? <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="text-green-600 hover:text-green-700 font-semibold">Зарегистрироваться</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}